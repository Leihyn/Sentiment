# RPC endpoint
RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Keeper wallet private key (must match the keeper address set in hook)
PRIVATE_KEY=0x...

# Deployed SentimentFeeHook address
HOOK_ADDRESS=0x...

# Optional: Update interval in milliseconds (default: 4 hours = 14400000)
UPDATE_INTERVAL=14400000

# Optional: Minimum sentiment change to trigger update (default: 5)
MIN_CHANGE_THRESHOLD=5

# Optional: Random jitter in minutes for anti-frontrunning (default: 30)
# Set to 0 to disable jitter
JITTER_MINUTES=30
